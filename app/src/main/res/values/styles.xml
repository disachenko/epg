<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowBackground">@color/dark_gray</item>
    </style>

    <style name="BottomNavigationStyle">
        <item name="android:itemBackground">@drawable/btn_background</item>
        <item name="itemBackground">@drawable/btn_background</item>
        <item name="itemIconTint">@color/bottom_navigation_icon_color_state</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size_default</item>
    </style>

    <style name="SecondaryTextStyle" parent="@style/PrimaryTextStyle">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="HeadlineTextStyle" parent="@style/PrimaryTextStyle">
        <item name="android:textSize">@dimen/font_size_huge</item>
    </style>

</resources>
